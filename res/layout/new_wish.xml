<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/hintItemName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:text="Account Name:" />

    <EditText
        android:id="@+id/addItemName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hintItemName"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:hint="Account Name" />

    <TextView
        android:id="@+id/hintCost"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addItemName"
        android:layout_marginLeft="3dp"
        android:text="Add Starting Amount:" />

    <EditText
        android:id="@+id/addCost"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hintCost"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:hint="Starting Amount" />

    <Button
        android:id="@+id/submitWish"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addCost"
        android:text="Submit" />

</RelativeLayout>